<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="russmanilads.projectminerva.Login">


    <ImageView
            android:id="@+id/minerva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="70dp"
            app:srcCompat="@drawable/logominerva" />

    <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:layout_margin="230dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/credentials"
            android:inputType="textPersonName"
            android:text="system ID or e-mail" />

    <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="275dp"
            android:text="password"
            android:background="@drawable/credentials"
            android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="320dp"
        android:text="Remember Me" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/presslogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/dont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="450dp"
        android:text="Don't have an account?" />

    <TextView
        android:id="@+id/tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="540dp"
        android:text="Copyright Â© 2017 Minerva Tech. All rights reserved." />


</RelativeLayout>
